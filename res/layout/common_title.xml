<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ff4400" 
    android:orientation="horizontal">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="20dp">
        <ImageView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/home_scan"/>
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="4dp"
	        android:textColor="#ffffff"
	        android:textSize="12sp"
	        android:text="扫一扫"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="1" 
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="8dp"
	    android:gravity="center"
        android:orientation="vertical">
        <EditText            
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/home_title_search"
	        android:cursorVisible="false"
	        android:drawablePadding="2dp"
	        android:textColor="#ffffff"
	        android:textColorHint="#ffffff"
	        android:background="@null"
	        android:singleLine="true"
		    android:textSize="18sp"		    
	        android:hint="像小屁屁一样的多肉" />
        <ImageView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:background="@drawable/home_title_searchline"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:gravity="center">
        <ImageView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/home_msg"/>
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="4dp"
	        android:textColor="#ffffff"
	        android:textSize="12sp"
	        android:text="消息"/>
    </LinearLayout>
    

    

</LinearLayout>
